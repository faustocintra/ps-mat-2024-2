generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Car {
  id  Int  @id @default(autoincrement())
  brand String
  model String
  color String
  year_manufacture Int
  imported Boolean
  plates String
  selling_date DateTime?
  selling_price Decimal?
}

model Customer {
  id Int @id @default(autoincrement())
  name String
  ident_document String
  birth_date DateTime?
  street_name String
  house_number String
  complements String?
  municipality String
  state String
  phone String
  email String
}

model User {
  id Int @id @default(autoincrement())
  fullname String 
  username String @unique
  email String @unique
  password String
  is_admin Boolean @default(false)
}