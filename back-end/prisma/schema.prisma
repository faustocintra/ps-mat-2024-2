generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Car {
  id                Int           @id @default(autoincrement())
  brand             String        // Marca do carro
  model             String        // Modelo do carro
  color             String        // Cor do carro
  year_manufacture  Int           // Ano de fabricação
  imported          Boolean       // Se o carro é importado ou não
  plates            String        // Placas do carro
  selling_date      DateTime?     // Data de venda; preenchimento opcional
  selling_price     Decimal?      // Preço de venda; preenchimento opcional
}

model Customer {
  id                Int           @id @default(autoincrement())
  name              String        // Nome do Cliente
  ident_document    String        // Documento de Identidade
  birth_date        DateTime?     // Data de nascimento; preenchimento opcional
  street_name       String        // Nome da Rua
  house_number      String        // Número da Casa
  complements       String?       // Complementos; preenchimento opcional
  municipality      String        // Município 
  state             String        // Estado
  phone             String        // Telefone
  email             String        // E-mail
}

model User {
  id                Int           @id @default(autoincrement())
  fullname          String        // Nome Completo
  username          String        @unique   // Não pode repetir
  email             String        @unique   // E-mail
  password          String        // Senha
  is_admin          Boolean       @default(false)
}

model Seller {
  id                Int           @id @default(autoincrement()) // Chave primária, autoincremental
  fullname          String        // Nome Completo
  birth_date        DateTime      // Data de nascimento
  ident_document    String        @unique   // CPF, índice único
  email             String        @unique   // E-mail, índice único
  phone             String        // Telefone/Celular
  is_manager        Boolean       @default(false) // É gerente? (Valor padrão: false)
}